<Window x:Class="SeriAllPort.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeriAllPort.Views"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="About SeriAllPort">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox 
            IsReadOnly="True" TextWrapping="Wrap" 
            HorizontalAlignment="Stretch" Width="auto"
            VerticalAlignment="Stretch" Height="auto"
            BorderThickness="0"
            Margin="20,10"
            Text="This software is released under the MIT License.&#xA;
            &#xA;Copyright © 2025 Simon Chang&#xD;&#xA;
            &#xA;You can find the full source code and more details on
            &#xA;https://github.com/marineop/SeriAllPort"
            />

        <WrapPanel Grid.Row="1" HorizontalAlignment="Right">
            <Button x:Name="uxOk" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="uxOk_Click" />
        </WrapPanel>
    </Grid>
</Window>
